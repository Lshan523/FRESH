.category{
  width: 100%;
  height:100vh;
}
.menus{
  width:180rpx;
  height:100%;
  position: fixed;
}
.menu_item{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 15px;
  background: #f8f8f8;
  border-right: 1px solid #d7d7d7;
  border-bottom: 1px solid #d7d7d7;
  box-sizing: border-box;
  position: relative;
}
.menu_item:last-of-type{
  border-bottom: none;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.cur{
  color:#f34b4b;
  border-right:1px solid #ffffff;
  background: #fff;
}
.cur::after{
  content: "";
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  border-left:3px solid #f02b2b;
}
.category-cont-wrap{
  padding-left: 180rpx;
  height:100%;
  text-align: center;
}