.category {
  width: 100%;
  height: 100vh;
}

.menus {
  width: 180rpx;
  height: 100%;
  position: fixed;
}

.menu_item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 15px;
  background: #f8f8f8;
  border-right: 1px solid #d7d7d7;
  border-bottom: 1px solid #d7d7d7;
  box-sizing: border-box;
  position: relative;
}

.menu_item:last-of-type {
  border-bottom: none;
}


.cur {
  color: #f34b4b;
  border-right: 1px solid #fff;
  background: #fff;
}

.cur::after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-left: 3px solid #f02b2b;
}

.category-cont-wrap {
  padding-left: 180rpx;
  height: 100%;
  text-align: center;
}

.category-title {
  line-height: 30px;
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  color: #666;
}

.category-title::before, .category-title::after {
  content: "";
  position: absolute;
  width: 120rpx;
  height: 1px;
  top: 50%;
  background: #ccc;
}

.category-title::before {
  left: 0;
  transform: translate3d(-120%, -50%, 0);
}

.category-title::after {
  right: 0;
  transform: translate3d(120%, -50%, 0);
}

.category-list {
  zoom: 1;
}

.category-list:after {
  content: "";
  width: 0;
  display: block;
  visibility: hidden;
  clear: both;
}

.onCategoryContItemTap {
  width: 33.333%;
  float: left;
  font-size: 12px;
}

.list-image {
  width: 120rpx;
  height: 120rpx;
}
.list_info{
  display: block;
}
