/* pages/productDetail/productDetail.wxss */
@import "../search_template/search_template.wxss";

.foid_item {
  font-size: 16px;
  border-bottom: 1px solid #e5e5e5;
  padding: 10px 0 10px 15px;
}

.foid_item:last-of-type {
  border-bottom: none;
}
.product-container{
  position: relative;
  background: #fff;
  z-index: 99;
  padding-top: 15px;
}
.btn {
  float: left;
  width: 50%;
  text-align: center;
  line-height: 45px;
  font-size: 16px;
}

.btn-calcel {
  background: #f2f2f7;
}

.btn-ok {
  color:#fff;
  background:#439741 ;
}
.mask-bg{
  position: fixed;
  width:100%;
  height:100%;
  background: rgba(0,0,0,.4);
  top:0;
  z-index:-1;
}
